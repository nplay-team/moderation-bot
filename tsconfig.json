{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ESNext",

		/* Modules */
		"module": "ESNext",
		"rootDir": "./src",
		"moduleResolution": "Node",

		/* Emit */
		"declaration": false,
		"declarationMap": false,
		"sourceMap": true,
		"outDir": "./dist",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,

		/* Completeness */
		"skipLibCheck": true,
		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"importHelpers": true
	},
	"exclude": ["node_modules"]
}
