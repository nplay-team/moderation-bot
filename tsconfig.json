{
	"compilerOptions": {
		/* Language and Environment */
		"target": "es2022",

		/* Modules */
		"module": "commonjs",
		"rootDir": "./src",

		/* Emit */
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,

		/* Completeness */
		"skipLibCheck": true
	}
}
