generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

///--- USER & PERMISSION MANAGEMENT ---///
model User {
  id             String   @id
  reports        Moderation[] @relation(name: "Moderation_User")
  createdReports Moderation[] @relation(name: "Moderation_Issuer")

  @@map("users")
}

model Permission {
  snowflake  String // user or role id
  permission Int    @default(0) // Bitwise permission
  guildId    String

  @@id(name: "id", [snowflake, guildId])
  @@map("permissions")
}

///--- REPORTS & MODERATION ---///
enum ModerationAction {
  WARN
  TIMEOUT
  KICK
  TEMP_BAN
  BAN
}

model Paragraph {
  id      String   @id @default(cuid())
  name    String
  summary String
  content String
  guildId String
  
  moderations Moderation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([guildId])
  @@map("paragraphs")
}

enum ReportStatus {
  OPENED
  EXECUTED
  DONE
  REVERTED
}

model Moderation {
  id      String       @id @default(cuid())
  number  Int
  user    User         @relation(name: "Moderation_User", fields: [userId], references: [id])
  userId  String
  guildId String
  action  ModerationAction
  status  ReportStatus @default(OPENED)

  reason      String?
  paragraph   Paragraph? @relation(fields: [paragraphId], references: [id])
  paragraphId String?

  message String? @db.LongText

  duration DateTime?
  delDays  Int?

  issuerId String
  issuer   User   @relation(name: "Moderation_Issuer", fields: [issuerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, guildId, number])
  @@map("moderations")
}
